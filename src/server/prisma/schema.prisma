generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  github   String?
  linkedin String?
  photo    String?
  role     String
}

model Hero {
  id       Int    @id @default(autoincrement())
  title    String
  subtitle String
  about    String
}

model About {
  id            Int      @id @default(autoincrement())
  descHighlight String
  description   String[]
}

model Stats {
  id   Int      @id @default(autoincrement())
  work String[]
  fun  String[]
}

model Projects {
  id          Int      @id @default(autoincrement())
  title       String
  img         String?
  code        String
  projectLink String?
  tech        String[]
  description String
  content     String[]
}

model Experience {
  id          Int      @id @default(autoincrement())
  title       String
  position    String
  time        String
  location    String
  description String[]
  tech        String[]
}
